<div class="admin-oben d-flex justify-content-around gap-2">
    {{!-- left block with stats --}}
    <ul class="list-unstyled">
        <li>{{stats.total}} files in Database</li>
        <li>{{stats.audio}} Audio Files</li>
        <li>{{stats.taggedAudio}} Tagged Audio Files</li>
        <li>{{stats.unverified}} Unverified Files</li>
        <li>Verification Task is&nbsp;{{#if verify.isRunning}}{{else}}<em>not</em>&nbsp;{{/if}}running.</li>
    </ul>
    {{!-- middle block with buttons --}}
    <ul class="list-unstyled">
        <li>
            {{!--#############--}}
            {{#if verify.isRunning}}
            {{else}}
            <label class="w-100">
                <select id="forceVerify"
                        class="w-100"
                        name="force">
                    <option value="basic">Basic</option>
                    <option value="stats"
                            selected>
                        Stats (~1 hour)
                    </option>
                    <option value="all">Force All (~1 day)</option>
                </select>
            </label>
            {{/if}}

            {{!--#############--}}
        </li>
        <li><button class="btn btn-outline-light w-100 py-0"
                    hx-get="{{config.mountpoint}}{{#if verify.isRunning}}/p/admin/cancelverify{{else}}/p/admin/startverify{{/if}}"
                    hx-target=".admin-oben"
                    hx-swap="outerHTML"
                    hx-include="#forceVerify">
                {{#if verify.isRunning}}cancel
                {{else}}start
                {{/if}}
                Verification
            </button></li>
        <li><button class="btn btn-outline-light w-100 py-0"
                    hx-get="{{config.mountpoint}}/p/admin-oben"
                    hx-target=".admin-oben"
                    hx-swap="outerHTML"
                    hx-trigger="click, sse:taskdone">
                refresh
            </button></li>
        <li><button class="btn btn-outline-light w-100 py-0"
                    hx-get="{{config.mountpoint}}/notexistend"
                    hx-target=".admin"
                    hx-swap="outerHTML">
                Error Button
            </button></li>
    </ul>
    {{!-- block with task stats --}}
    <ul class="list-unstyled">
        <li>Verify is&nbsp;{{#if verify.isRunning}}{{else}}NOT&nbsp;{{/if}}running</li>
        <li>cancelled: {{verify.cancelled}}</li>
        <li>completed: {{verify.completed}}</li>
        <li>doneCount: {{verify.doneCount}}</li>
        <li>runTime: {{verify.runTime}} secs</li>
    </ul>
</div>
