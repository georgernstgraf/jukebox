generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Track {
    id         String    @id @default(uuid())
    path       String    @unique
    verifiedAt DateTime? // this is set when the hard work was done

    ext      String?
    mimeType String?
    sha256   String?

    sizeBytes Int?
    inode     BigInt?

    artist  String?
    album   String?
    title   String?
    year    Int?
    trackNo Int?

    @@index([artist])
    @@index([mimeType])
    @@index([album])
    @@index([sha256])
    @@index([verifiedAt])
    @@index([inode])
}

model User {
    id        String   @id @default(uuid())
    name      String
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
