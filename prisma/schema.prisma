generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Track {
  id        String  @id @default(uuid())
  path      String  @unique
  ext       String?
  sizeBytes Int?
  sha256    String?

  artist  String?
  album   String?
  title   String?
  year    String?
  trackNo String?
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
